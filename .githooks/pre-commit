#!/bin/bash
# Pre-commit hook for Miniflux KOReader plugin
# Runs code quality checks before allowing commits

set -e

echo "ğŸ” Running pre-commit code quality checks..."

# Check if task command is available
if ! command -v task &> /dev/null; then
    echo "âŒ Task not found. Please install Task (https://taskfile.dev)"
    exit 1
fi

# Check if stylua is available
if ! command -v stylua &> /dev/null; then
    echo "âŒ StyLua not found. Please install: cargo install stylua"
    exit 1
fi

# Check if luacheck is available  
if ! command -v luacheck &> /dev/null; then
    echo "âŒ Luacheck not found. Please install: luarocks install luacheck"
    exit 1
fi

# Check if lua-language-server is available
if ! command -v lua-language-server &> /dev/null; then
    echo "âŒ lua-language-server not found. Please install from https://github.com/LuaLS/lua-language-server"
    exit 1
fi

# Run code quality checks
echo "ğŸ“ Checking code formatting..."
if ! task fmt; then
    echo ""
    echo "âŒ Code formatting issues found!"
    echo "ğŸ’¡ Run 'task fmt-fix' to auto-fix formatting issues"
    exit 1
fi

echo "ğŸ” Running static analysis..."
if ! task lint; then
    echo ""
    echo "âŒ Linting issues found!"
    echo "ğŸ’¡ Fix the issues above and try again"
    exit 1
fi

echo "ğŸ” Running LSP diagnostics..."
if ! task lsp-check; then
    echo ""
    echo "âŒ LSP diagnostics found!"
    echo "ğŸ’¡ Fix the issues above and try again"
    exit 1
fi

echo "âœ… All pre-commit checks passed!"