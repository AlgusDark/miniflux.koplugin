{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "workspace": {
    "library": [
      "./typedefs",
      "./src",
      "./spec",
      "${3rd}/busted/library",
      "${3rd}/luassert/library"
    ],
    "checkThirdParty": true,
    "ignoreSubmodules": true
  },
  "completion": {
    "requireSeparator": "/",
    "callSnippet": "Both"
  },
  "diagnostics": {
    "globals": [
      "require",
      "_",
      "UIManager",
      "BookList",
      "WidgetContainer", 
      "InfoMessage",
      "ButtonDialog",
      "ConfirmBox",
      "DataStorage",
      "LuaSettings",
      "CacheSQLite",
      "DocSettings",
      "Dispatcher",
      "FFIUtil",
      "util",
      "lfs",
      "logger",
      "dbg",
      "htmlparser"
    ],
    "disable": [
      "undefined-global",
      "lowercase-global"
    ]
  },
  "runtime": {
    "version": "Lua 5.1",
    "path": [
      "?.lua",
      "?/init.lua",
      "src/?.lua",
      "src/?/init.lua",
      "spec/?.lua",
      "spec/?/init.lua"
    ]
  },
  "format": {
    "enable": false
  },
  "hint": {
    "enable": true,
    "paramType": true,
    "setType": true
  },
  "telemetry": {
    "enable": false
  }
} 